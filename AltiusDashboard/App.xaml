<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AltiusDashboard.App">
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="backgroundColor">#474442</Color>
			<Color x:Key="darkBackgroundColor">#33302e</Color>
			<Color x:Key="textColor">White</Color>
			<Color x:Key="labelColor">#888888</Color>

			<Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
				<Setter Property="BarBackgroundColor" Value="{StaticResource Key=darkBackgroundColor}"></Setter>
				<Setter Property="BarTextColor" Value="{StaticResource Key=textColor}"></Setter>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
